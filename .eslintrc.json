{
  "parserOptions": {
    "ecmaVersion": 2020,
    "sourceType": "script"
  },
  "env": {
    "es6": true,
    "node": true
  },
  "plugins": ["github"],
  "extends": ["plugin:github/recommended"],
  "rules": {
    "camelcase": [
      "error",
      {
        "properties": "never",
        "allow": ["html_url", "pull_request", "ref_type"]
      }
    ],
    "import/extensions": "off",
    "i18n-text/no-en": "off",
    "import/no-commonjs": "off"
  }
}
